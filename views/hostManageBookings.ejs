<!DOCTYPE html>
<html lang="en">

<head>
    <!-- <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Host Booking Page</title> -->
    <!-- Bootstrap CSS -->
    <%- include('hostBarItem/hostHeader.ejs') %>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            /* Custom styles */
            body {
                background-color: #f8f9fa;
            }

            .booking-card {
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                border-radius: 10px;
                margin-bottom: 20px;
            }

            .booking-card .card-header {
                background-color: #007bff;
                color: white;
                font-weight: bold;
            }

            .action-btns button {
                margin-right: 10px;
            }
        </style>
</head>

<body>
    <header>
        <%- include('hostBarItem/hostNavbar.ejs') %>
    </header>

    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-md-2">
                <%- include('hostBarItem/hostSidebar.ejs') %>
            </div>

            <div class="container-fluid col-md-10 ms-auto p-4 mt-5">
                <!-- Page Container -->
                <div class="container mt-4">
                    <h1 class="text-center mb-4">Manage Your Bookings</h1>

                    <!-- Bookings List -->
                    <div class="row">
                        <!-- Example Booking Card -->
                        <% bookings.forEach(booking=> { %>
                            <div class="col-md-6">
                                <div class="card booking-card">
                                    <div class="card-header">
                                        <span>Booking # <%= booking.id %> </span>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">Property: <%= booking.accommodation_name %>
                                        </h5>
                                        <p class="card-text">
                                            <strong>Guest Name:</strong>
                                            <%= booking.full_name %> <br>
                                                <strong>Check-in:</strong>
                                                <%= booking.check_in_date %> <br>
                                                    <strong>Check-out:</strong>
                                                    <%= booking.check_out_date %> <br>
                                                        <strong>Guests:</strong>
                                                        <%= booking.max_guests %> <br>
                                                            <strong>Total Price:</strong> $<%= booking.total_price %>
                                        </p>
                                        <% if (booking.payment_status='pending' ) { %>
                                            <!-- Show Confirm and Decline buttons only if the booking is pending -->
                                            <form action="/confirm-booking/<%= booking.id %>" method="POST"
                                                style="display:inline;">
                                                <button type="submit" class="btn btn-success">Confirm</button>
                                            </form>
                                            <form action="/decline-booking/<%= booking.id %>" method="POST"
                                                style="display:inline;">
                                                <button type="submit" class="btn btn-danger">Decline</button>
                                            </form>
                                            <% } else { %>
                                                <p>Booking has been <%= booking.payment_status %>
                                                </p>
                                                <% } %>
                                    </div>
                                </div>
                            </div>
                            <% }) %>



                                <!-- More booking cards can be dynamically rendered here -->

                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('hostBarItem/hostHeader.ejs') %>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            /* Custom styles */
            body {
                background-color: #fff8e1;
                /* Light background color */
                color: black;
                /* Text color */
            }

            h1 {
                color: #D7A20D;
                /* Header color */
            }

            .booking-card {
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                /* Slightly darker shadow */
                border-radius: 10px;
                margin-bottom: 20px;
                background-color: white;
                /* Card background color */
            }

            .booking-card .card-header {
                background-color: #D7A20D;
                /* Card header background */
                color: white;
                font-weight: bold;
                border-top-left-radius: 10px;
                border-top-right-radius: 10px;
            }

            .action-btns button {
                margin-right: 10px;
            }

            .btn-warning {
                background-color: #D7A20D;
                /* Custom warning button color */
                border: none;
                /* Remove border */
            }

            .btn-warning:hover {
                background-color: #b5910d;
                /* Darker on hover */
            }

            .btn-danger {
                background-color: #dc3545;
                /* Bootstrap danger button */
                border: none;
                /* Remove border */
            }

            .btn-danger:hover {
                background-color: #c82333;
                /* Darker on hover */
            }

            .badge {
                font-size: 0.9em;
            }
        </style>
</head>

<body>
    <header>
        <%- include('hostBarItem/hostNavbar.ejs') %>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2">
                <%- include('hostBarItem/hostSidebar.ejs') %>
            </div>

            <div class="col-md-10 ms-auto p-4 mt-5">
                <!-- Page Container -->
                <div class="container mt-4">
                    <h1 class="text-center mb-4">Manage Your Bookings</h1>

                    <!-- Bookings List -->
                    <div class="row">
                        <% bookings.forEach(booking=> { %>
                            <div class="col-md-6">
                                <div class="card booking-card">
                                    <div class="card-header">
                                        <span>Booking # <%= booking.id %> </span>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">Property: <%= booking.accommodation_name %>
                                        </h5>
                                        <p class="card-text">
                                            <strong>Guest Name:</strong>
                                            <%= booking.full_name %> <br>
                                                <strong>Check-in:</strong>
                                                <%= booking.check_in_date %> <br>
                                                    <strong>Check-out:</strong>
                                                    <%= booking.check_out_date %> <br>
                                                        <strong>Guests:</strong>
                                                        <%= booking.max_guests %> <br>
                                                            <strong>Total Price in USD:</strong> $<%= booking.total_price %> <br>
                                                            <strong>Total Price in LRD:</strong> $<%= booking.total_price * 190 %>
                                        </p>
                                        <% if (booking.payment_status==='pending' ) { %>
                                            <div class="action-btns">
                                                <form action="/confirm-booking/<%= booking.id %>" method="POST"
                                                    style="display:inline;">
                                                    <button type="submit" class="btn btn-warning">Confirm</button>
                                                </form>
                                                <form action="/decline-booking/<%= booking.id %>" method="POST"
                                                    style="display:inline;">
                                                    <button type="submit" class="btn btn-danger">Decline</button>
                                                </form>
                                            </div>
                                            <% } else { %>
                                                <p class="badge bg-secondary">Booking has been <%=
                                                        booking.payment_status %>
                                                </p>
                                                <% } %>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
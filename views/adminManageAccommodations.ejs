<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accommodations Management</title>
    <%- include('partial/header.ejs') %>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body {
                background-color: #fff;
            }

            header {
                background-color: #D7A20D;
                /* Gold Header */
            }

            h4 {
                color: #D7A20D;
                /* Gold for headings */
            }

            .table {
                background-color: #FFF8E1;
                /* Light Cream for table */
            }

            .badge-success {
                background-color: #D7A20D;
                /* Gold for status badges */
            }

            .btn-primary {
                background-color: #D7A20D;
                /* Gold for primary buttons */
                border: none;
            }

            .btn-primary:hover {
                background-color: #b78f0b;
                /* Darker gold on hover */
            }

            .btn-warning {
                background-color: #FFC107;
                /* Yellow for edit buttons */
            }

            .btn-danger {
                background-color: #DC3545;
                /* Red for remove buttons */
            }

            .badge-pending {
                background-color: #FFC107;
                /* Yellow for pending status */
            }

            .badge-denied {
                background-color: #DC3545;
                /* Red for denied status */
            }

            .badge-approved {
                background-color: #28A745;
                /* Green for approved status */
            }
        </style>
</head>

<body style="background-color: #fff8e1;">
    <!-- Navbar or Header if necessary -->
    <header>
        <%- include('partial/navbar.ejs') %>
    </header>

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2">
                <%- include('partial/adminSidebar.ejs') %>
            </div>

            <!-- Accommodations Management Content -->
            <div class="col-md-10 ms-auto p-4 mt-5">
                <h4>Accommodations Management</h4>

                <!-- Add Accommodation Button -->
                <div class="mb-4">
                    <a class="btn btn-primary" href="/admin-add-accommodation">Add New Property</a>
                </div>

                <!-- Pending Accommodations -->
                <h5>Pending Accommodations</h5>
                <div class="table-responsive mb-4">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Accommodation ID</th>
                                <th>Name</th>
                                <th>Location</th>
                                <th>Price (USD)</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% pendingAccommodations.forEach(accommodation=> { %>
                                <tr>
                                    <td>
                                        <%= accommodation.id %>
                                    </td>
                                    <td>
                                        <%= accommodation.name %>
                                    </td>
                                    <td>
                                        <%= accommodation.address %>
                                    </td>
                                    <td>
                                        <%= accommodation.price %>
                                    </td>
                                    <td><span class="badge badge-pending">Pending</span></td>
                                    <td>
                                        <!-- <button class="btn btn-sm btn-warning">Edit</button>
                                        <button class="btn btn-sm btn-danger">Remove</button> -->
                                        <div class="action-btns">
                                            <form action="/approve-accommodation/<%= accommodation.id %>" method="POST"
                                                style="display:inline;">
                                                <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                            </form>
                                            <form action="/deny-accommodation/<%= accommodation.id %>" method="POST"
                                                style="display:inline;">
                                                <button type="submit" class="btn btn-sm btn-secondary">Deny</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>

                <!-- Approved Accommodations -->
                <h5>Approved Accommodations</h5>
                <div class="table-responsive mb-4">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Accommodation ID</th>
                                <th>Name</th>
                                <th>Location</th>
                                <th>Price (USD)</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% approvedAccommodations.forEach(accommodation=> { %>
                                <tr>
                                    <td>
                                        <%= accommodation.id %>
                                    </td>
                                    <td>
                                        <%= accommodation.name %>
                                    </td>
                                    <td>
                                        <%= accommodation.location %>
                                    </td>
                                    <td>
                                        <%= accommodation.price %>
                                    </td>
                                    <td><span class="badge badge-approved">Approved</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-warning">Edit</button>
                                        <button class="btn btn-sm btn-danger">Remove</button>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>

                <!-- Denied Accommodations -->
                <h5>Denied Accommodations</h5>
                <div class="table-responsive mb-4">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Accommodation ID</th>
                                <th>Name</th>
                                <th>Location</th>
                                <th>Price (USD)</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% deniedAccommodations.forEach(accommodation=> { %>
                                <tr>
                                    <td>
                                        <%= accommodation.id %>
                                    </td>
                                    <td>
                                        <%= accommodation.name %>
                                    </td>
                                    <td>
                                        <%= accommodation.location %>
                                    </td>
                                    <td>
                                        <%= accommodation.price %>
                                    </td>
                                    <td><span class="badge badge-denied">Denied</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-warning">Edit</button>
                                        <button class="btn btn-sm btn-danger">Remove</button>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
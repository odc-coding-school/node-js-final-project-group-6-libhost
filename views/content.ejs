<div class="container mt-4">
    <h2>Find Your Perfect Stay</h2>
    <form action="/home" method="GET" class="form-inline">
        <div class="form-group mx-sm-3 mb-2">
            <input type="text" class="form-control" name="name" placeholder="Accommodation Name">
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <input type="text" class="form-control" name="city" placeholder="City">
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <input type="text" class="form-control" name="address" placeholder="Address">
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <input type="number" class="form-control" name="bedrooms" placeholder="Bedrooms">
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <input type="number" class="form-control" name="price" placeholder="Max Price">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Search</button>
    </form>
  </div>
  
  </div>
  
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StayLib - Payment Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .payment-card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
            border-radius: 10px;
        }

        .proceed-btn {
            background-color: #ff6600;
            color: white;
        }

        .proceed-btn:hover {
            background-color: #ff4500;
        }
    </style>
</head>

<body>
    <%-include('navbar');-%>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="payment-card p-4">
                        <h3 class="text-center">Payment Summary</h3>
                        <hr>

                        <!-- Accommodation Cost -->
                        <div class="d-flex justify-content-between">
                            <span>Accommodation Cost:</span>
                            <span id="accommodation-cost">$200.00</span> <!-- Dynamically updated with JS/PHP -->
                        </div>

                        <!-- StayLib 8% Interest -->
                        <div class="d-flex justify-content-between mt-2">
                            <span>StayLib Service Fee (8%):</span>
                            <span id="staylib-fee">$16.00</span> <!-- Dynamically calculated -->
                        </div>

                        <!-- Total Payment -->
                        <div class="d-flex justify-content-between mt-2">
                            <span><strong>Total Payment:</strong></span>
                            <span id="total-payment"><strong>$216.00</strong></span> <!-- Dynamically calculated -->
                        </div>

                        <hr>

                        <!-- Payment Method -->
                        <div class="form-group">
                            <label for="payment-method">Choose Payment Method:</label>
                            <select class="form-control" id="payment-method">
                                <option value="orange_money">Orange Money</option>
                                <option value="credit_card">Credit Card</option>
                                <option value="paypal">PayPal</option>
                            </select>
                        </div>

                        <div class="form-group">

                        </div>

                        <!-- Proceed Button -->
                        <div class="text-center">
                            <button class="btn proceed-btn btn-lg" onclick="submitPayment()">Proceed with
                                Payment</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            // Mock data for dynamic values (replace with server-side data)
            const accommodationCost = 200.00;
            const staylibFee = accommodationCost * 0.08;
            const totalPayment = accommodationCost + staylibFee;

            // Update the UI with dynamic values
            document.getElementById('accommodation-cost').innerText = `$${accommodationCost.toFixed(2)}`;
            document.getElementById('staylib-fee').innerText = `$${staylibFee.toFixed(2)}`;
            document.getElementById('total-payment').innerText = `$${totalPayment.toFixed(2)}`;

            // Function to handle the form submission (payment processing simulation)
            function submitPayment() {
                const paymentMethod = document.getElementById('payment-method').value;

                // Redirect to payment processing page (or simulate payment)
                window.location.href = `/process-payment?method=${paymentMethod}&total=${totalPayment.toFixed(2)}`;
            }
        </script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StayLib - Payment Page</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #fff8e1;
            color: black;
        }

        .payment-card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
            border-radius: 10px;
            background-color: white;
        }

        .proceed-btn {
            background-color: #D7A20D;
            color: white;
            border: none;
        }

        .proceed-btn:hover {
            background-color: #b1880b;
        }

        h3 {
            color: #D7A20D;
        }

        hr {
            border-top: 2px solid #D7A20D;
        }

        select {
            background-color: #fff8e1;
            color: black;
        }

        .form-group label {
            color: #D7A20D;
        }

        .total-payment-text {
            font-weight: bold;
            color: black;
        }

        .total-payment-amount {
            font-weight: bold;
            color: #D7A20D;
        }
    </style>
</head>

<body>
    <%- include('navbar'); -%>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="payment-card p-4">
                        <h3 class="text-center">Payment Summary</h3>
                        <hr>

                        <!-- Payment Currency -->
                        <div class="form-group">
                            <label for="currency-select">Choose Payment Currency:</label>
                            <select class="form-control" id="currency-select">
                                <option value="USD">USD</option>
                                <option value="LRD">LRD</option>
                            </select>
                        </div>

                        <!-- Accommodation Cost -->
                        <div class="d-flex justify-content-between">
                            <p>Accommodation Cost:</p>
                            <p id="accommodation-cost">
                                $<%= accommodation_cost %> USD
                            </p>
                        </div>

                        <!-- StayLib Service Fee -->
                        <div class="d-flex justify-content-between mt-2">
                            <p>StayLib Service Fee (2%):</p>
                            <p id="staylib-fee">
                                $<%= service_fee %> USD
                            </p>
                        </div>

                        <!-- Total Payment -->
                        <div class="d-flex justify-content-between mt-2">
                            <p class="total-payment-text">Total Payment:</p>
                            <p class="total-payment-amount" id="total-payment">
                                $<%= total_payment %> USD
                            </p>
                        </div>

                        <hr>

                        <!-- Payment Method -->
                        <div class="form-group">
                            <label for="payment-method">Choose Payment Method:</label>
                            <select class="form-control" id="payment-method">
                                <option value="orange_money">Orange Money</option>
                                <option value="mobile_money">Mobile Money</option>
                                <option value="credit_card">Credit Card</option>
                                <option value="paypal">PayPal</option>
                            </select>
                        </div>

                        <!-- Proceed Button -->
                        <form class="text-center" action="/payment/<%= bookingId %>" method="POST"
                            style="display:inline;">
                            <button type="submit" class="btn proceed-btn btn-lg">Proceed with Payment</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script>
            const accommodationCostUSD = <%= accommodation_cost %>;  // Value from server-side
            const serviceFeeUSD = <%= service_fee %>;                // Value from server-side
            const totalPaymentUSD = <%= total_payment %>;            // Value from server-side
            const conversionRate = 190;  // 1 USD = 190 LRD

            const currencySelect = document.getElementById("currency-select");
            const accommodationCostElement = document.getElementById("accommodation-cost");
            const staylibFeeElement = document.getElementById("staylib-fee");
            const totalPaymentElement = document.getElementById("total-payment");

            currencySelect.addEventListener("change", function () {
                const selectedCurrency = currencySelect.value;

                if (selectedCurrency === "LRD") {
                    // Convert to LRD
                    accommodationCostElement.innerText = `L$${(accommodationCostUSD * conversionRate).toFixed(2)} LRD`;
                    staylibFeeElement.innerText = `L$${(serviceFeeUSD * conversionRate).toFixed(2)} LRD`;
                    totalPaymentElement.innerText = `L$${(totalPaymentUSD * conversionRate).toFixed(2)} LRD`;
                } else {
                    // Display in USD
                    accommodationCostElement.innerText = `$${accommodationCostUSD.toFixed(2)} USD`;
                    staylibFeeElement.innerText = `$${serviceFeeUSD.toFixed(2)} USD`;
                    totalPaymentElement.innerText = `$${totalPaymentUSD.toFixed(2)} USD`;
                }
            });
        </script>
</body>

</html>
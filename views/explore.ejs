<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/bootstrap 5.3.3/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="/font-awesome 4.7.0/css/font-awesome.css">
    <title>Dashboard</title>

    <style>
        body {
            background-color: #FFF8E1;
            /* Light cream background */
        }

        h2 {
            color: black;
            font-weight: bold;
        }

        .card {
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: scale(1.03);
            /* Slight zoom effect on hover */
        }

        .carousel-inner img {
            height: 250px;
            object-fit: cover;
            border-radius: 10px 10px 0 0;
        }

        /* Price Badge Styling */
        .price-tag {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: #D7A20D;
            /* Golden yellow */
            font-weight: bold;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .card-body {
            background-color: white;
            /* White background for content */
            color: black;
            /* Black text color */
        }

        .card-title {
            color: black;
            font-size: 1.2rem;
            margin-bottom: 0.5rem;
        }

        .text-muted {
            color: #6c757d;
        }

        /* Carousel Controls */
        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-color: #D7A20D;
            /* Golden yellow controls */
            border-radius: 50%;
        }

        /* Ratings Styling */
        .fa-star {
            font-size: 1rem;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .card img {
                height: 200px;
                /* Smaller image height for mobile */
            }

            .carousel-control-prev-icon,
            .carousel-control-next-icon {
                width: 30px;
                height: 30px;
                /* Smaller controls for mobile */
            }
        }
    </style>
</head>

<body>
    <!-- Include Navbar -->
    <%-include('navbar');-%>

        <!-- Available Accommodations Section -->
        <div class="container mt-5 pt-5">
            <h2>Available Accommodations</h2>

            <div class="container text-center" id="content-section">
                <div class="row">
                    <% accommodations.forEach((accommodation, index)=> { %>
                        <% if (accommodation.status==="approved" ) { %>
                            <div class="col-md-4 mb-5">
                                <a href="/property-detail/<%= accommodation.id %>" class="text-decoration-none">
                                    <div class="card shadow-lg border-0 h-100">

                                        <!-- Price Badge -->
                                        <div class="price-tag text-white px-2 py-1 rounded"
                                            style="position: absolute; top: 10px; left: 10px; background-color: #D7A20D; z-index: 1111;">
                                            <i class="fa fa-dollar"></i>
                                            <%= accommodation.price * 190 %> LRD
                                        </div>

                                        <!-- Carousel -->
                                        <div id="carousel<%= index %>" class="carousel slide" data-bs-ride="carousel">
                                            <div class="carousel-inner rounded-top">
                                                <% accommodation.images.forEach((image, imgIndex)=> { %>
                                                    <div class="carousel-item <%= imgIndex === 0 ? 'active' : '' %>">
                                                        <img src="<%= image %>" alt="Property Image"
                                                            class="card-img-top img-fluid d-block w-100"
                                                            style="height: 250px; object-fit: cover;">
                                                    </div>
                                                    <% }) %>
                                            </div>
                                            <button class="carousel-control-prev" type="button"
                                                data-bs-target="#carousel<%= index %>" data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                <span class="visually-hidden">Previous</span>
                                            </button>
                                            <button class="carousel-control-next" type="button"
                                                data-bs-target="#carousel<%= index %>" data-bs-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                <span class="visually-hidden">Next</span>
                                            </button>
                                        </div>

                                        <!-- Card Body -->
                                        <div class="card-body">
                                            <div class="text-start">
                                                <h5 class="card-title text-capitalize fw-bold">
                                                    <%= accommodation.name %>
                                                </h5>
                                                <p class="text-muted mb-2">
                                                    <i class="fa fa-map-marker-alt"></i>
                                                    <%= accommodation.city %>, <%= accommodation.address %>
                                                </p>
                                                <p class="small text-muted">
                                                    <%= accommodation.full_name %>
                                                </p>
                                            </div>

                                            <!-- Bedrooms and Rating -->
                                            <p class="card-text text-capitalize">
                                                <i class="fa fa-bed"></i>
                                                <%= accommodation.bedrooms %> Bedrooms
                                                    <span class="float-end">
                                                        <% for(let i=0; i < 5; i++) { %>
                                                            <i
                                                                class="fa fa-star <%= i < accommodation.rating ? 'text-warning' : 'text-muted' %>"></i>
                                                            <% } %>
                                                    </span>
                                            </p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <% } %>
                                <% }) %>
                </div>
            </div>
        </div>

        <!-- Include Footer -->
        <%-include('footer');-%>

            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
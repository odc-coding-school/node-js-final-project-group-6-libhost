<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        <%= title %>
    </title>
    <!-- External CSS -->
    <link rel="stylesheet" href="css/styles.css">
    <!-- Bootstrap CSS -->
    <link href="/bootstrap 5.3.3/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="/font-awesome 4.7.0/css/font-awesome.css">
    <meta charset="utf-8">
</head>

<body>
    <%-include('navbar');-%>

        <div class="container mt-5">
            <!-- Property Name -->
            <div class="header text-center">
                <h1 class="text-dark text-capitalize">
                    <%= property.name %>
                </h1>
                <p class="lead text-capitalize">Home / Hotel Details</p>
            </div>

            <!-- Property Image Carousel -->
            <div id="propertyCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <% if (property.images && property.images.length) { %>
                        <% property.images.forEach((image, index)=> { %>
                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                <img src="<%= image %>" class="d-block w-100" alt="Property Imageee"
                                    style="height: 450px; object-fit: cover;">
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="carousel-item active">
                                        <img src="/images/sinkor-palace-hotel.jpg" class="d-block w-100" alt="Default Property Image"
                                            style="height: 450px; object-fit: cover;">
                                    </div>
                                    <% } %>

                </div>
                <!-- Carousel Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

            <!-- Property Information -->
            <div class="row">
                <div class="col-md-8">
                    <h3 class="text-capitalize">About <%= property.name %>
                    </h3>
                    <p class="text-dark">
                        <%= property.description %>
                    </p>
                    <p class="text-muted">Location: <%= property.location %>
                    </p>
                    <p>Owner: <%= property.full_name %>
                    </p>
                </div>
                <div class="col-md-4">
                    <div class="card p-3">
                        <h4>Start Booking</h4>
                        <p class="text-dark"><strong><i class="fa fa-dollar"></i>
                                <%= property.price %> per day
                            </strong></p>
                        <a href="#" class="btn btn-primary text-capitalize">Book Now</a>
                    </div>
                </div>
            </div>

            <!-- Property Features -->
            <div class="container mt-5" id="features">
                <h4 class="mb-4">Property Features</h4>
                <div class="row text-center">
                    <div class="col-sm">
                        <i class="fa fa-wifi fa-2x"></i>
                        <p class="text-uppercase mt-2">WiFi</p>
                    </div>
                    <div class="col-sm">
                        <i class="fa fa-bed fa-2x"></i>
                        <p class="text-capitalize mt-2">
                            <%= property.bedrooms %> Bedrooms
                        </p>
                    </div>
                    <div class="col-sm">
                        <i class="fa fa-bath fa-2x"></i>
                        <p class="text-capitalize mt-2">
                            <%= property.bathrooms %> Bathrooms
                        </p>
                    </div>
                    <div class="col-sm">
                        <i class="fa fa-tv fa-2x"></i>
                        <p class="text-uppercase mt-2">TV</p>
                    </div>
                    <div class="col-sm">
                        <i class="fa fa-car fa-2x"></i>
                        <p class="text-capitalize mt-2">Parking</p>
                    </div>
                </div>
            </div>

        </div>

        <%-include('footer');-%>
            <!-- Bootstrap JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partial/header.ejs') %>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <header>
        <%- include('partial/navbar.ejs') %>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2">
                <%- include('partial/adminSidebar.ejs') %>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 ms-auto p-4 mt-5">
                <!-- <h4>Sidebar Items Overview</h4> -->
                <div class="container-fluid p">
                    <div class="row">
                        <!-- Summary Cards -->
                        <h4>Dashboard Overview</h4>
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Total Users</h5>
                                    <p class="card-text">
                                        <%= users.length %>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Total Properties</h5>
                                    <p class="card-text">
                                        <%= accommodations.length %>
                                    </p>

                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Total Bookings</h5>
                                    <p class="card-text">1200</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Total Earnings</h5>
                                    <p class="card-text">$54,000</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Hosts Table -->
                <div class="table-responsive">
                    <h4>Hosts Overview</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Host ID</th>
                                <th>Host Name</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#H001</td>
                                <td>John Doe</td>
                                <td>johndoe@example.com</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>
                                    <button class="btn btn-sm btn-warning">Edit</button>
                                    <button class="btn btn-sm btn-danger">Remove</button>
                                </td>
                            </tr>
                            <!-- More rows -->
                        </tbody>
                    </table>
                </div>

                <!-- Properties Table -->
                <div class="table-responsive mt-4">
                    <h4>Properties Overview</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Property ID</th>
                                <th>Host Name</th>
                                <th>Property Name</th>
                                <th>Location</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#P001</td>
                                <td>John Doe</td>
                                <td>Apartment A</td>
                                <td>Monrovia</td>
                                <td><span class="badge bg-success">Available</span></td>
                                <td>
                                    <button class="btn btn-sm btn-warning">Edit</button>
                                    <button class="btn btn-sm btn-danger">Remove</button>
                                </td>
                            </tr>
                            <!-- More rows -->
                        </tbody>
                    </table>
                </div>

                <!-- Bookings Table -->
                <div class="table-responsive mt-4">
                    <h4>Bookings Overview</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Booking ID</th>
                                <th>Host</th>
                                <th>Property</th>
                                <th>Guest</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#B001</td>
                                <td>John Doe</td>
                                <td>Apartment A</td>
                                <td>Jane Smith</td>
                                <td>2024-09-15</td>
                                <td><span class="badge bg-success">Confirmed</span></td>
                                <td>
                                    <button class="btn btn-sm btn-warning">Edit</button>
                                    <button class="btn btn-sm btn-danger">Cancel</button>
                                </td>
                            </tr>
                            <!-- More rows -->
                        </tbody>
                    </table>
                </div>

                <!-- Users Table -->
                <div class="table-responsive mt-4">
                    <h4>Users Overview</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>User ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#U001</td>
                                <td>Jane Smith</td>
                                <td>janesmith@example.com</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>
                                    <button class="btn btn-sm btn-warning">Edit</button>
                                    <button class="btn btn-sm btn-danger">Deactivate</button>
                                </td>
                            </tr>
                            <!-- More rows -->
                        </tbody>
                    </table>
                </div>

                <!-- Payments Table -->
                <div class="table-responsive mt-4">
                    <h4>Payments Overview</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Payment ID</th>
                                <th>User</th>
                                <th>Amount</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#P001</td>
                                <td>John Doe</td>
                                <td>$100</td>
                                <td>2024-09-01</td>
                                <td><span class="badge bg-success">Completed</span></td>
                                <td>
                                    <button class="btn btn-sm btn-warning">Refund</button>
                                </td>
                            </tr>
                            <!-- More rows -->
                        </tbody>
                    </table>
                </div>

                <!-- Reports Table -->
                <div class="table-responsive mt-4">
                    <h4>Reports Overview</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Report ID</th>
                                <th>Report Name</th>
                                <th>Generated On</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#R001</td>
                                <td>Monthly Booking Report</td>
                                <td>2024-09-01</td>
                                <td><span class="badge bg-info">Generated</span></td>
                                <td>
                                    <button class="btn btn-sm btn-primary">View</button>
                                </td>
                            </tr>
                            <!-- More rows -->
                        </tbody>
                    </table>
                </div>

                <!-- Settings Table -->
                <div class="table-responsive mt-4">
                    <h4>Settings Overview</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Setting</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Platform Language</td>
                                <td>English</td>
                            </tr>
                            <tr>
                                <td>Email Notifications</td>
                                <td>Enabled</td>
                            </tr>
                            <!-- More rows -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
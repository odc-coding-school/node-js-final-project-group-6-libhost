<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partial/header.ejs') %>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body {
                background-color: #fff8e1;
                /* Light background color */
                color: black;
                /* Default text color */
            }

            header {
                background-color: #D7A20D;
                /* Header background */
                /* padding: 1rem 0; */
            }

            h4 {
                color: #D7A20D;
                /* Dashboard title color */
            }

            .card {
                border: none;
                /* No border for cards */
                background-color: white;
                /* Card background */
            }

            .card-body {
                padding: 1.5rem;
                /* Padding inside the card */
            }

            .table {
                background-color: white;
                /* Table background */
            }

            .table th,
            .table td {
                color: black;
                /* Table text color */
            }

            .table th {
                background-color: #D7A20D;
                /* Header background for tables */
                color: white;
                /* Header text color */
            }

            .btn-warning,
            .btn-danger {
                transition: background-color 0.3s, transform 0.2s;
            }

            .btn-warning:hover {
                background-color: #e0a800;
                /* Darker on hover */
                transform: scale(1.05);
            }

            .btn-danger:hover {
                background-color: #c82333;
                /* Darker on hover */
                transform: scale(1.05);
            }

            .badge {
                font-size: 0.9rem;
                /* Smaller badge font */
            }
        </style>
</head>

<body>
    <header>
        <%- include('partial/navbar.ejs') %>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2">
                <%- include('partial/adminSidebar.ejs') %>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 ms-auto p-4 mt-5">
                <div class="container-fluid p">
                    <div class="row">
                        <h4>Dashboard Overview</h4>
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Total Users</h5>
                                    <p class="card-text">
                                        <%= users.length %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Total Properties</h5>
                                    <p class="card-text">
                                        <%= accommodations.length %>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Total Bookings</h5>
                                    <p class="card-text">1200</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Total Earnings</h5>
                                    <p class="card-text">$54,000</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- The tables commented out can be uncommented and styled similarly -->
                <!-- Additional content here -->

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
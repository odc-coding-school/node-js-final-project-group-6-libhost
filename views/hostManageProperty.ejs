<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('hostBarItem/hostHeader.ejs') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom Styles */
        body {
            background-color: #fff8e1; /* Light background */
            color: black; /* Text color */
        }

        .navbar {
            background-color: #D7A20D; /* Navbar background color */
        }

        .navbar .nav-link,
        .navbar .dropdown-item {
            color: white; /* Navbar text color */
        }

        .card {
            border: 1px solid #D7A20D; /* Card border color */
            transition: transform 0.2s; /* Smooth transition */
        }

        .card:hover {
            transform: scale(1.02); /* Scale effect on hover */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Shadow on hover */
        }

        .badge.bg-dark {
            background-color: #333; /* Dark badge background */
        }

        .btn-warning {
            background-color: #D7A20D; /* Warning button color */
            border: none; /* Remove border */
        }

        .btn-warning:hover {
            background-color: #b89d0d; /* Darker shade on hover */
        }

        h4 {
            color: #D7A20D; /* Headings color */
        }

        .property-card {
            background-color: white; /* Card background color */
            border-radius: 10px; /* Rounded corners */
        }
    </style>
</head>

<body>
    <header>
        <%- include('hostBarItem/hostNavbar.ejs') %>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2">
                <%- include('hostBarItem/hostSidebar.ejs') %>
            </div>

            <div class="container-fluid col-md-10 ms-auto p-4 mt-5">
                <!-- Add Property Button -->
                <div class="row mt-4">
                    <div class="col-md-12">
                        <h4>Manage Properties</h4>
                        <a href="/add-accommodation" class="btn btn-dark mb-3">Add New Property</a>
                    </div>
                </div>

                <!-- Property Cards Grid -->
                <div class="row">
                    <% accommodations.forEach((accommodation, index) => { %>
                        <div class="col-md-4">
                            <div class="card property-card mb-4">
                                <div class="card-body">

                                    <!-- Carousel -->
                                    <div id="carousel<%= index %>" class="carousel slide" data-bs-ride="carousel">
                                        <div class="carousel-inner rounded-top">
                                            <% accommodation.images.forEach((image, imgIndex) => { %>
                                                <div class="carousel-item <%= imgIndex === 0 ? 'active' : '' %>">
                                                    <img src="<%= image %>" alt="Property Image"
                                                        class="card-img-top img-fluid d-block w-100"
                                                        style="height: 250px; object-fit: cover;">
                                                </div>
                                            <% }) %>
                                        </div>
                                        <button class="carousel-control-prev" type="button"
                                            data-bs-target="#carousel<%= index %>" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Previous</span>
                                        </button>
                                        <button class="carousel-control-next" type="button"
                                            data-bs-target="#carousel<%= index %>" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Next</span>
                                        </button>
                                    </div>

                                    <h5 class="card-title" style="font-weight: bold;">
                                        <%= accommodation.name %>
                                    </h5>
                                    <p class="card-text">
                                        <%= accommodation.location %>
                                    </p>
                                    <p class="card-text" style="font-weight: bold;">Bookings: 5</p>
                                    <span class="badge bg-dark">Active</span>
                                    <div class="mt-3">
                                        <button class="btn btn-sm btn-warning">View</button>
                                        <button class="btn btn-sm btn-dark">Edit</button>
                                        <button class="btn btn-sm btn-warning">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Add Accommodation</title>
    <style>
        body {
            background-color: #f9f9f9;
            color: #333;
            font-family: Arial, sans-serif;
        }

        .container {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            margin: auto;
        }

        h2 {
            margin-bottom: 20px;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-control,
        .form-control-file {
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        .form-control:focus,
        .form-control-file:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .img-preview {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .img-preview img {
            max-width: 150px;
            max-height: 150px;
            border-radius: 5px;
        }

        .form-check-label {
            margin-bottom: 0;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h2>Add New Accommodation</h2>
        <form method="post" action="/admin-add-accommodation" id="addAccommodationForm" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Accommodation Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" class="form-control" id="city" name="city" required>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="address" required>
            </div>
            <div class="form-group">
                <label for="price">Price per Night ($)</label>
                <input type="number" class="form-control" id="price" name="price" required min="0">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
            </div>
            <div class="form-group">
                <label for="images">Upload Images</label>
                <input type="file" class="form-control-file" id="images" name="images" multiple accept="image/*">
                <small class="form-text text-muted">You can upload multiple images. Max file size: 5MB each.</small>
                <div class="img-preview mt-3" id="imgPreview"></div>
            </div>
            <div class="form-group">
                <label for="bedrooms">Number of Bedrooms</label>
                <input type="number" class="form-control" id="bedrooms" name="bedrooms" required min="0">
            </div>
            <div class="form-group">
                <label for="bathrooms">Number of Bathrooms</label>
                <input type="number" class="form-control" id="bathrooms" name="bathrooms" required min="0">
            </div>
            <div class="form-group">
                <label for="kitchen">Kitchen Available</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="kitchen_yes" name="kitchen" value="1" required>
                    <label class="form-check-label" for="kitchen_yes">Yes</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="kitchen_no" name="kitchen" value="0" required>
                    <label class="form-check-label" for="kitchen_no">No</label>
                </div>
            </div>
            <div class="form-group">
                <label for="living_room">Living Room Available</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="living_room_yes" name="living_room" value="1"
                        required>
                    <label class="form-check-label" for="living_room_yes">Yes</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="living_room_no" name="living_room" value="0"
                        required>
                    <label class="form-check-label" for="living_room_no">No</label>
                </div>
            </div>
            <div class="form-group">
                <label for="dinning_room">Dining Room Available</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="dinning_room_yes" name="dinning_room" value="1"
                        required>
                    <label class="form-check-label" for="dinning_room_yes">Yes</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="dinning_room_no" name="dinning_room" value="0"
                        required>
                    <label class="form-check-label" for="dinning_room_no">No</label>
                </div>
            </div>
            <div class="form-group">
                <label for="wifi">Wifi Available</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="wifi-yes" name="wifi" value="1" required>
                    <label class="form-check-label" for="wifi-yes">Yes</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="wifi-no" name="wifi" value="0" required>
                    <label class="form-check-label" for="wifi-no">No</label>
                </div>
            </div>
            <div class="form-group">
                <label for="balcony">Balcony Available</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="balcony_yes" name="balcony" value="1" required>
                    <label class="form-check-label" for="balcony_yes">Yes</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="balcony_no" name="balcony" value="0" required>
                    <label class="form-check-label" for="balcony_no">No</label>
                </div>
            </div>

            <div class="form-group">
                <label for="parking">Parking Available</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="parking_yes" name="parking" value="1" required>
                    <label class="form-check-label" for="parking_yes">Yes</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="parking_no" name="parking" value="0" required>
                    <label class="form-check-label" for="parking_no">No</label>
                </div>
            </div>

            <div class="form-group">
                <label for="gym">Gym Available</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="gym_yes" name="gym" value="1" required>
                    <label class="form-check-label" for="gym_yes">Yes</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="gym_no" name="gym" value="0" required>
                    <label class="form-check-label" for="gym_no">No</label>
                </div>
            </div>

            <div class="form-group">
                <label for="swimming_pool">Swimming Pool Available</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="swimming_pool_yes" name="swimming_pool" value="1"
                        required>
                    <label class="form-check-label" for="swimming_pool_yes">Yes</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="swimming_pool_no" name="swimming_pool" value="0"
                        required>
                    <label class="form-check-label" for="swimming_pool_no">No</label>
                </div>
            </div>

            <div class="form-group">
                <label for="max_guests">Max Guests</label>
                <input type="number" class="form-control" id="max_guests" name="max_guests" required min="1">
            </div>
            <div class="form-group">
                <label for="amenities">Amenities</label>
                <textarea class="form-control" id="amenities" name="amenities" rows="3"></textarea>
            </div>
            <!-- <div class="form-group">
                <label for="check_in_date">Check-in Date</label>
                <input type="date" class="form-control" id="check_in_date" name="check_in_date" required>
            </div>
            <div class="form-group">
                <label for="check_out_date">Check-out Date</label>
                <input type="date" class="form-control" id="check_out_date" name="check_out_date" required>
            </div> -->
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.getElementById('images').addEventListener('change', function (event) {
            const preview = document.getElementById('imgPreview');
            preview.innerHTML = ''; // Clear existing previews
            const files = event.target.files;

            for (const file of files) {
                if (file && file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        const img = document.createElement('img');
                        img.src = e.target.result;
                        preview.appendChild(img);
                    };
                    reader.readAsDataURL(file);
                }
            }
        });
    </script>
</body>


</html>
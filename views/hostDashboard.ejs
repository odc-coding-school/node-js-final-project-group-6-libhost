<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('hostBarItem/hostHeader.ejs') %>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
           
        </style>
</head>

<body>
    <header>
        <%- include('hostBarItem/hostNavbar.ejs') %>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2">
                <%- include('hostBarItem/hostSidebar.ejs') %>
            </div>

            <div class="container-fluid col-md-10 mt-5 px-5 pt-3">
                <div class="row mt-4">
                    <!-- Summary Cards -->
                    <div class="col-md-3">
                        <div class="card text-white bg-warning mb-3" id="tProperty">
                            <div class="card-body">
                                <h5 class="card-title">Total Properties</h5>
                                <p class="card-text">
                                    <%= accommodations.length %> Properties
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-dark mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Upcoming Bookings</h5>
                                <p class="card-text">2 Bookings</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-warning mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Messages</h5>
                                <p class="card-text">3 New Messages</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-dark mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Total Earnings</h5>
                                <p class="card-text">$1500</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Bookings Table -->
                <div class="row">
                    <div class="col-md-12">
                        <h4>Recent Bookings</h4>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Booking ID</th>
                                        <th>Property</th>
                                        <th>Guest</th>
                                        <th>Check-in</th>
                                        <th>Check-out</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>#B001</td>
                                        <td>Apartment A</td>
                                        <td>Jane Smith</td>
                                        <td>2024-09-15</td>
                                        <td>2024-09-20</td>
                                        <td><span class="badge bg-warning">Confirmed</span></td>
                                    </tr>
                                    <!-- More Rows -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Graph (optional) -->
                <div class="row">
                    <div class="col-md-12">
                        <h4>Earnings Overview</h4>
                        <canvas id="earningsChart"></canvas>
                    </div>
                </div>
            </div>


        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
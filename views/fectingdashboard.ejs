<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<title>Dashboard</title>
</head>
<body>
<div class="container mt-5">
    <h2>Available Accommodations</h2>
    <div id="accommodation-list" class="row">
        <!-- Accommodation items will be injected here -->
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
// Function to fetch and display accommodations
function fetchAccommodations() {
    fetch('/accommodations')
        .then(response => response.json())
        .then(data => {
            const accommodationList = document.getElementById('accommodation-list');
            accommodationList.innerHTML = ''; // Clear existing items
            data.forEach(accommodation => {
                const accommodationItem = document.createElement('div');
                accommodationItem.className = 'col-md-4 mb-4';
                accommodationItem.innerHTML = `
                    <div class="card">
                        <img src="${accommodation.images.split(',')[0]}" class="card-img-top" alt="${accommodation.accomodation_name}">
                        <div class="card-body">
                            <h5 class="card-title">${accommodation.name}</h5>
                            <p class="card-text">${accommodation.location}</p>
                            <p class="card-text">$${accommodation.price} per night</p>
                            <p class="card-text">${accommodation.description}</p>
                        </div>
                    </div>
                `;
                accommodationList.appendChild(accommodationItem);
            });
        })
        .catch(error => console.error('Error fetching accommodations:', error));
}

// Call the function to load accommodations when the page loads
window.onload = fetchAccommodations;
</script>
</body>
</html>
